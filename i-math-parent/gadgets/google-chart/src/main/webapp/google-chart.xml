<?xml version="1.0" encoding="UTF-8"?>
<Module id="google-chart">
	<ModulePrefs title="图标绘制器" />
	<Content type="html">
  <![CDATA[ 
<script type="text/javascript" src="/dwr/interface/chartService.js">
  </script>
<script type="text/javascript">
var googleChartReplay=function(data){
	$("google-chart-img").setProperty('src', data);
}
</script>

<div><img id="google-chart-img" src=""></div>

<input id="google-chart-input" type="text" value="x+1">
<br />
最小值：
<input id="google-chart-min" value="0">
最大值：
<input id="google-chart-max" value="100">

<input type="button" value="绘图"
	onclick="chartService.draw(
		$('google-chart-input').value,
		$('google-chart-min').value,
		$('google-chart-max').value,
		googleChartReplay
		);">

 ]]>
	</Content>
