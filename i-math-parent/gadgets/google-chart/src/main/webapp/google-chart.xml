<Module id="google-chart">
	<ModulePrefs title="图表绘制器" />
	<Content type="html">
  <![CDATA[ 
<script type="text/javascript" src="/dwr/interface/chartService.js">
  </script>
<script type="text/javascript">
var googleChartReplay=function(data){
	$("google-chart-img").setProperty('src', data);
}
</script>

