<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="web" extends="struts-default" namespace="/">
		<action name="index" class="indexAction">
			<result name="success" type="freemarker">index.htm</result>
		</action>
		<action name="ifr" class="ifrAction">
			<result name="success" type="freemarker">gadget-test.htm
			</result>
		</action>
		<action name="debugger" class="debuggerAction">
			<result name="success" type="freemarker">debugger.htm
			</result>
		</action>
		<action name="getGreeting" class="getGreetingAction">
			<result name="success" type="freemarker">getGreeting.htm
			</result>
		</action>

		<action name="saveGreeting" class="saveGreetingAction">
			<result name="success" type="redirectAction">
				<param name="actionName">getGreeting</param>
			</result>
		</action>
	</package>

</struts>
